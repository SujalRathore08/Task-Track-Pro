<script>
    $(document).ready(function () {
        var userData = JSON.parse(sessionStorage.getItem("User"));

        // Pre-fill user data
        $("#usernameEdit").val(userData.Name);
        $("#email").val(userData.Email);
        $("#gender").val(userData.c_gender);
        $("#userIdEdit").val(parseInt(userData.c_uid)); // Convert to int
        $("#oldProfilePic").val(userData.c_profilepicture);

        // Show existing profile picture (if available)
        if (userData.c_profilepicture) {
            $("#previewImage").attr("src", "/profile_images/" + userData.c_profilepicture).show();
        }

        // Handle form submission
        $("#updateProfileForm").submit(function (e) {
            e.preventDefault();

            var formData = new FormData();
            formData.append("c_uname", $("#usernameEdit").val());
            formData.append("c_email", $("#email").val());
            formData.append("c_gender", $("#gender").val());
            formData.append("c_uid", $("#userId").val());

            var profilePic = $("#profilePicture")[0].files[0];

            if (profilePic) {
                formData.append("c_newProfilepicture", profilePic); // Send new image if selected
            } else {
                formData.append("c_newProfilepicture", ""); // Send an empty string to satisfy validation
            }

            formData.append("c_profilepicture", $("#oldProfilePic").val()); // Send existing image filename

            $.ajax({
                url: "http://localhost:5136/api/UserApi/ProfileUpdate",
                type: "PUT",
                processData: false,
                contentType: false,
                data: formData,
                success: function (response) {
                    $("#successMessage").removeClass("d-none").text("Profile updated successfully!");
                    $("#errorMessage").addClass("d-none");
                },
                error: function (xhr) {
                    $("#errorMessage").removeClass("d-none").text(xhr.responseText);
                    $("#successMessage").addClass("d-none");
                }
            });
        });



        // Preview selected profile picture
        $("#profilePicture").change(function (event) {
            var reader = new FileReader();
            reader.onload = function (e) {
                $("#previewImage").attr("src", e.target.result).show();
            };
            reader.readAsDataURL(event.target.files[0]);
        });
    });
</script>