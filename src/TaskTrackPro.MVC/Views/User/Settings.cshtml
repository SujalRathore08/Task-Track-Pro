<div class="container mt-5">
    <div class="card shadow p-4">
        <h3 class="text-center">Update Profile</h3>
        <form id="updateProfileForm">
            <div class="mb-3">
                <label for="usernameEdit" class="form-label">Username</label>
                <input type="text" class="form-control" id="usernameEdit" name="c_uname" required>
            </div>
            <div class="mb-3">
                <label for="email" class="form-label">Email</label>
                <input type="email" class="form-control" id="email" name="c_email" required>
            </div>
            <div class="mb-3">
                <label for="gender" class="form-label">Gender</label>
                <select class="form-control" id="gender" name="c_gender" required>
                    <option value="">Select Gender</option>
                    <option value="Male">Male</option>
                    <option value="Female">Female</option>
                    <option value="Other">Other</option>
                </select>
            </div>
            <div class="mb-3">
                <label for="profilePicture" class="form-label">Profile Picture</label>
                <input type="file" class="form-control" id="profilePicture" name="c_newProfilepicture">
                <img id="previewImage" src="" alt="Profile Picture" class="img-thumbnail mt-2"
                    style="max-width: 100px; display: none;">
            </div>
            <input type="hidden" id="userId" name="c_uid">
            <input type="hidden" id="oldProfilePic" name="c_profilepicture">
            <div class="text-center">
                <button type="submit" class="btn btn-primary">Update Profile</button>
            </div>
        </form>

        <div id="successMessage" class="alert alert-success mt-3 d-none"></div>
        <div id="errorMessage" class="alert alert-danger mt-3 d-none"></div>
    </div>
</div>

<div class="container mt-4">
    <h2>Change Password</h2>
    <div class="alert alert-success d-none" id="successMessage">Password updated successfully!</div>
    <div class="alert alert-danger d-none" id="errorMessage"></div>

    <form id="changePasswordForm">
        <div class="mb-3">
            <label for="oldPassword" class="form-label">Old Password</label>
            <input type="password" class="form-control" id="oldPassword" name="OldPassword" required>
        </div>
        <div class="mb-3">
            <label for="newPassword" class="form-label">New Password</label>
            <input type="password" class="form-control" id="newPassword" name="NewPassword" required>
        </div>
        <button type="submit" class="btn btn-primary">Update Password</button>
    </form>
</div>


<script>
    $(document).ready(function () {
        var userData = JSON.parse(sessionStorage.getItem("User"));

        $("#changePasswordForm").submit(function (e) {
            e.preventDefault();

            var userId = parseInt(userData.c_uid); // Fetch user ID from session
            var oldPassword = $("#oldPassword").val();
            var newPassword = $("#newPassword").val();

            var formData = new FormData();
            formData.append("c_uid", userId);
            formData.append("OldPassword", oldPassword);
            formData.append("NewPassword", newPassword);

            $.ajax({
                url: "http://localhost:5136/api/UserApi/ChangePassword", // Update this with your API endpoint
                type: "PUT",
                processData: false,
                contentType: false,
                data: formData,
                success: function (response) {
                    $("#successMessage").removeClass("d-none").text("Password updated successfully!");
                    $("#errorMessage").addClass("d-none");
                    $("#changePasswordForm")[0].reset();
                },
                error: function (xhr) {
                    $("#errorMessage").removeClass("d-none").text(xhr.responseText);
                    $("#successMessage").addClass("d-none");
                }
            });
        });
    });
</script>

