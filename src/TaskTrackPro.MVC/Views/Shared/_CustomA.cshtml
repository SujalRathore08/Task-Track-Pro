<script>
    function updateLoginTime() {
        const now = new Date();
        const formattedDate = now.toLocaleString('en-US', {
            year: 'numeric',
            month: '2-digit',
            day: '2-digit',
            hour: '2-digit',
            minute: '2-digit',
            second: '2-digit',
            hour12: true
        });
        document.getElementById('loginTime').textContent = formattedDate;
    }

    updateLoginTime(); // Call the function to update time on page load
</script>

